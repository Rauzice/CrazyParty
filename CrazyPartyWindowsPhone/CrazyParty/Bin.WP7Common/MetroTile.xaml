<UserControl x:Class="CrazyParty.Bin.WP7Common.MetroTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Width="200" Height="200"
    d:DesignHeight="200" d:DesignWidth="200">

    <Grid x:Name="LayoutRoot" Background="#8957a1" >
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="tileTitle" Width="176" Height="30" Grid.Row="0" Style="{StaticResource PhoneTextNormalStyle}" Text="sdf"/>
        <Image Width="160" Height="160" Grid.Row="1" Source="../Resources/GameBG.png">
        </Image>
        <TextBlock x:Name="tileInfo" Width="176" Height="200" Grid.Row="2" Style="{StaticResource PhoneTextNormalStyle}" Visibility="Collapsed" Text="{Binding About}"/>
    </Grid>
</UserControl>
